        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>
        <data android:scheme="https" android:host="juniperassistant.com" android:pathPrefix="/oauth/"/>
        <data android:scheme="mobilejarvisnative"/>
      </intent-filter>
    </activity>
